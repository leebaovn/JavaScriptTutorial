extends ../layouts/common
block content
	h1 LOGIN

	if errors
		each error in errors
			.alert.alert-danger= error

	form(method="POST")
		.form-group
			label(for="email") Email:
			input#email(type="email", name="email",class="form-control" value=values ? values.email : '')
		.form-group
			label(for="password") Password
			input#password(type="password", name="password",class="form-control" value=values ? values.password : '')
		button(class="btn btn-primary") Login
